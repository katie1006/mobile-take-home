<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="GeneralText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#CECECE</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GeneralText.Label">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GeneralText.Alive">
        <item name="android:textColor">#ff9800</item>
    </style>

    <style name="GeneralText.Name">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

</resources>
