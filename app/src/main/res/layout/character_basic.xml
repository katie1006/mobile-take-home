<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/character_info_margin_horizontal"
    android:paddingEnd="@dimen/character_info_margin_horizontal"
    android:background="@color/colorAccent50">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="@dimen/character_info_margin_vertical"
        android:paddingTop="@dimen/character_info_margin_vertical"
        android:textAppearance="@style/GeneralText.Name"
        android:textStyle="bold"
        tools:text="Tuberculosis"/>

    <TextView
        android:id="@+id/total_appearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/GeneralText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:paddingBottom="@dimen/character_info_margin_vertical"
        tools:text="@string/total_appearance"/>

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dead_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>